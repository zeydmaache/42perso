#include <unistd.h>

static int  ft_isspace(char c)
{
    return ((c >= 9 && c <= 13) || c == 32);
}
int ft_atoi(char *str)
{
    int i;
    int sign;
    int res;
    i = 0;
    sign = 1;
    res = 0;
    while (ft_isspace(str[i]))
        i++;
    while (str[i] == '+' || str[i] == '-')
    {
        if (str[i] == '-')
            sign *= -1;
        i++;
    }
    while (str[i] >= '0' && str[i] <= '9')
    {
        res = res * 10 + (str[i] - '0');
        i++;
    }
    return (res * sign);
}
